{% extends 'base.html.twig' %}

{% block title %}Create Homepage{% endblock %}

{% block body %}
    <h1>Create Homepage</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.content, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.created_at, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.created_at, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
    <a href="{{ path('home') }}" class="btn btn-secondary mt-3">Back to list</a>
{% endblock %}
